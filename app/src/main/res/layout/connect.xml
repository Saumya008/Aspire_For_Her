<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/connectbg">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:layout_marginLeft="60dp"
        android:text="Connect Through \nSocial Media"
        android:textColor="#C85B5B"
        android:textStyle="bold"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="315dp"
        android:layout_height="wrap_content"

        android:layout_marginLeft="30dp"
        android:fontFamily="@font/aclonica"
        android:gravity="center"
        android:text="As a young woman in a country poised on a unique growth opportunity, you have a chance to make a difference. Aspire for Her will provide access to a peer community and information and guidance on career choices."
        android:textColor="#C85B5B"
        android:textSize="15sp"
        android:typeface="monospace" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="40dp">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="135dp">

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/fb" />

            <ImageView
                android:id="@+id/iv2"
                android:layout_width="143dp"
                android:layout_height="match_parent"
                android:src="@drawable/twitter" />

        </TableRow>

        <TableRow
            android:layout_width="352dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv3"
                android:layout_width="171dp"
                android:layout_height="129dp"
                android:src="@drawable/insta" />

            <ImageView
                android:id="@+id/iv4"
                android:layout_width="135dp"
                android:layout_height="119dp"
                android:paddingTop="15dp"
                android:src="@drawable/linkedin" />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/iv5"
                android:layout_width="132dp"
                android:layout_height="100dp"
                android:src="@drawable/medium" />

            <ImageView
                android:id="@+id/iv6"
                android:layout_width="105dp"
                android:layout_height="86dp"
                android:paddingTop="5dp"
                android:src="@drawable/you" />

        </TableRow>

    </TableLayout>

</LinearLayout>