<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/aboutbg"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:text="Welcome!"
        android:textStyle="bold"
        android:textColor="#000"
        android:background="@color/white"
        android:textSize="30dp"

        android:gravity="center"/>

    <TextView
        android:id="@+id/text3"
        android:layout_width="227dp"
        android:layout_height="162dp"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="5dp"
        android:text="Aspire for Her Foundation is a not-for-profit company powered by extraordinary women leaders as mentors and role models. Aspire for Her Foundation primarily works on a C2B (College-to-Business) model creating online and offline programs for its members (18-25 year old women) through partnerships with forward-thinking, diversity-focused organisations and professionals. "
        android:textColor="#fff"
        android:textSize="12sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:layout_marginTop="2dp"
        android:alpha="0.9"
        android:backgroundTint="#F0F4FC"
        tools:targetApi="lollipop">

        <ImageView
            android:layout_width="71dp"
            android:layout_height="73dp"
            android:layout_marginLeft="75dp"
            android:background="#F0F4FC"
            android:src="@drawable/mentor1" />

        <TextView
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="20dp"
            android:text="Madhura DasGupta Sinha"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="40dp"
            android:text="Founder and CEO, \n Aspire for Her Foundation "
            android:textColor="@color/black"
            android:textSize="10sp" />

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:layout_marginTop="15dp"
        android:alpha="0.9"
        android:backgroundTint="#F0F4FC"
        tools:targetApi="lollipop">

        <ImageView
            android:layout_width="71dp"
            android:layout_height="73dp"
            android:layout_marginLeft="75dp"
            android:background="#F0F4FC"
            android:src="@drawable/mentor2" />

        <TextView
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="20dp"
            android:text="Mandira DasGupta"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginStart="160dp"
            tools:ignore="SmallSp" />

        <TextView
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="40dp"
            android:text="Director, Aspire for Her Foundation "
            android:textColor="@color/black"
            android:textSize="7sp" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="2dp"
        android:text=" Femtastic Advisors"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <HorizontalScrollView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="82dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/m1" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/m2"
            android:contentDescription="TODO" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/m3"
            android:contentDescription="TODO" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/m4" />
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/m5" />
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/m6" />
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/m7" />
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/m8" />
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/m9" />

        </LinearLayout>
    </HorizontalScrollView>


</LinearLayout>